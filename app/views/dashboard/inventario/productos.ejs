<!-- Header -->
<%- include('../../partials/inventario/header.ejs') %>
<!-- Main -->
<main class="py-6 bg-surface-secondary">
    <div class="container-fluid">
        <h1>Registrar un Nuevo Producto</h1>
        <form method="POST" action="/dashboard/inventario/nuevo">
            <label for="nombre">Nombre del Producto:</label>
            <input type="text" id="nombre" name="nombre" required><br>
            <label for="precio">Precio del Producto:</label>
            <input type="number" id="precio" name="precio" step="0.01" required><br>
            <label for="existencia">Existencia del Producto:</label>
            <input type="number" id="existencia" name="existencia" required><br>
            <button type="submit">Registrar Producto</button>
        </form>
    </div>
</main>